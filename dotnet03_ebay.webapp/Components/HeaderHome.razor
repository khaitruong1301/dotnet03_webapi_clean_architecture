<!-- Categories -->
<div class="container mb-4">
    <div class="row text-center">
        @foreach (CategoryViewModel item in _categories)
        {
            <div class="col">
                <NavLink href=@($"/category/{item.Id}") class="text-decoration-none text-dark">@item.Name</NavLink>
            </div>
        }


    </div>
</div>


@code {
    // You can add any C# code here if needed for the component
    private HttpClient? _httpClient;
    private List<CategoryViewModel> _categories = new List<CategoryViewModel>();
    protected override async Task OnInitializedAsync()
    {
        _httpClient = HttpClientFactory.CreateClient("EbayAPI");
        try
        {
            var response = await _httpClient.GetAsync("Product/GetAllCategory");
            if (response.IsSuccessStatusCode)
            {
                var res = await response.Content.ReadFromJsonAsync<HTTPResponseVM<IEnumerable<CategoryViewModel>>>();
                _categories = res?.Content?.ToList();
                Console.WriteLine($@" {JsonSerializer.Serialize(_categories)}");
            }
            else
            {

                Console.WriteLine("Error fetching categories: " + response.ReasonPhrase);
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine("Exception occurred while fetching categories: " + ex.Message);
        }
    }
}
